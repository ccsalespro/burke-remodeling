<p id="notice"><%= notice %></p>

<h1>Listing Salons</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Business name</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Website?</th>
      <th>Web Address</th>
      <th>Appt?</th>
      <th>Mobile?</th>
      <th>Phone</th>
      <th>Stage</th>
      <th>Zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salons.each do |salon| %>
      <tr>
        <td><%= salon.business_name %></td>
        <td><%= salon.email %></td>
        <td><%= salon.contact %></td>
        <td><%= salon.website %></td>
        <td><%= salon.web_address %></td>
        <td><%= salon.appointment_scheduling %></td>
        <td><%= salon.mobile_ready %></td>
        <td><%= salon.phone %></td>
        <td><%= salon.stage %></td>
        <td><%= salon.zip_code_id %></td>
        <td><%= link_to 'Show', city_zip_code_salon_path(@city, @zip_code, salon) %></td>
        <td><%= link_to 'Edit', edit_city_zip_code_salon_path(@city, @zip_code, salon) %></td>
        <td><%= link_to 'Destroy', [@city, @zip_code, salon], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Salon', new_city_zip_code_salon_path(@city, @zip_code) %>
