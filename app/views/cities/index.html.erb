<p id="notice"><%= notice %></p>

<h1>Listing Cities</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>City name</th>
      <th>State</th>
      <th>Population</th>
      <th>Wiki link</th>
      <th>Wiki text</th>
      <th>City url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.id %></td>
        <td><%= city.city_name %></td>
        <td><%= city.state %></td>
        <td><%= city.population %></td>
        <td><%= city.wiki_link %></td>
        <td><%= city.wiki_text.truncate(140) %></td>
        <td><%= city.city_url %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Add Zip', new_city_zip_code_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

